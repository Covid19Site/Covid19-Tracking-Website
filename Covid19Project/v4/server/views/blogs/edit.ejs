<%- include("../partials/header") %>

<div class='container'>
    <div class='row'>
        <h1 style='text-align: center'>Edit <%= blog.title %></h1>
        <div style='width: 30%; margin: 25px auto;'>
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class='form-group'>
                    <label>Title</label>
                    <input class='form-control' type='text' name='blog[title]' value="<%= blog.title %>">
                </div>
                <div class='form-group'>
                    <label>Image</label>
                    <input class='form-control' type='text' name='blog[image]' value="<%= blog.image %>">
                </div>
                <div class='form-group'>
                    <label>Content</label>
                    <textarea name="blog[body]"><%= blog.body %></textarea>
                </div>
                <div class='form-group'>
                <button class='btn btn-md btn-primary btn-block'>Submit!</button>
            </div>
            </form>
            <a href='/blogs/<%= blog._id %>'>Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>