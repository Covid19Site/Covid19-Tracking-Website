<%- include("../partials/header") %>

<div class='container'>
    <header class='jumbotron'>
        <div class ='container'>
            <h1>Welcome To Covid19 Project!</h1>
            <p>View our top blog posts from all over the world</p>
            <p>
                <a class='btn btn-primary btn-lg' href='/blogs/new'>Add New Blog</a>
            </p>
        </div>
    </header>

    <div class='row text-center' style='display:flex; flex-wrap: wrap;'>
        <% blogs.forEach(function(blog){ %>
            <div class='col-md-3 col-sm-6'>
                <h2>Title: <%= blog.title %></h2>
                <img src="<%= blog.image %>">
                <span>Time: <%= blog.created.toDateString() %></span>
                <p>Content: <%= blog.body.substring(0, 100) %>...</p>
                <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read More</a>
            </div>
        <% }); %>
    </div>
</div>

<%- include("../partials/footer") %>