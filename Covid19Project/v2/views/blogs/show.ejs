<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Covid19 Project</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbanil">
                <img class="img-responsive" src="<%= blog.image %>">
                <div class="caption-full">
                    <h3>Title: <%= blog.title %></h3>
                    <p>
                        <em>Submitted By <%= blog.author.username %></em>
                    </p>
                    <span>Time: <%= blog.created.toDateString() %></span>
                    <p><%- blog.body %></p>
                </div>
                <div class="text-right">
                    <a class="btn btn-success" href="/blogs/<%= blog._id %>/edit">Edit</a>
                    <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-success">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/blogs/<%= blog._id %>/comments/new">Add New comment</a>
                </div>
                <hr>
                <% blog.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= comment.created.toDateString() %></span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>